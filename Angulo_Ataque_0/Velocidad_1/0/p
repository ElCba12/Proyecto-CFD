FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// CORRECCIÓN CRÍTICA: Usar 101325 Pa. Si usas 0, la simulación explota.
pOut            101325; 

// CORRECCIÓN: Dimensiones de presión termodinámica (Pa)
dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $pOut;

boundaryField
{
    // Nombre exacto según tu blockMeshDict (línea 169)
    aerofoil
    {
        type            zeroGradient;
    }

    // Nombre exacto según tu blockMeshDict (línea 176)
    inlet
    {
        type            freestreamPressure;
        freestreamValue uniform $pOut;
        value           uniform $pOut;
    }

    // Nombre exacto según tu blockMeshDict (línea 186)
    outlet
    {
        type            freestreamPressure;
        freestreamValue uniform $pOut;
        value           uniform $pOut;
    }

    // Nombres exactos para las caras 2D
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
}
