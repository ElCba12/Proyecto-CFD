FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// CORRECCIÓN: Presión Absoluta (Pa) para compresible
pOut            101325; 

// CORRECCIÓN: Dimensiones de Pascales [1 -1 -2 0 0 0 0]
dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $pOut;

boundaryField
{
    // Coincide con blockMeshDict: aerofoil
    aerofoil
    {
        type            zeroGradient;
    }

    // Coincide con blockMeshDict: inlet
    inlet
    {
        type            freestreamPressure;
        freestreamValue uniform $pOut;
        value           uniform $pOut;
    }

    // Coincide con blockMeshDict: outlet
    outlet
    {
        type            freestreamPressure;
        freestreamValue uniform $pOut;
        value           uniform $pOut;
    }

    frontAndBack
    {
        type            empty;
    }
}
// ************************************************************************* //