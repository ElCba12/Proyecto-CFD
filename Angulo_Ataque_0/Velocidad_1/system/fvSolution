FoamFile
{
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    // Solver “genérico” para los campos principales
    "(rho|rhoU|rhoE|e)"
    {
        solver      diagonal;
    }

    // Correcciones “Final” que el shockFluid anda buscando
    rhoFinal
    {
        solver      diagonal;
    }

    UFinal
    {
        solver      diagonal;
    }

    eFinal
    {
        solver      diagonal;
    }
}

PIMPLE
{
    momentumPredictor no;      // No predecir (ya lo hace shockFluid)
    nOuterCorrectors 1;        // Solo 1 corrección externa
    nCorrectors      1;        // Solo 1 corrección interna
    nNonOrthogonalCorrectors 0;
}

// Sin relajación para solvers explícitos
relaxationFactors
{
    equations
    {
        ".*" 1;
    }
}

