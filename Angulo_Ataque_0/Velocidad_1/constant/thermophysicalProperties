FoamFile
{
    format      ascii;
    class       dictionary;
    location    "constant";
    object      thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

thermoType
{
    type            hePsiThermo;       // Termodinámica basada en compresibilidad (psi)
    mixture         pureMixture;       // Mezcla pura (solo aire)
    transport       const;             // Propiedades de transporte constantes
    thermo          hConst;            // Calor específico constante (Cp)
    equationOfState perfectGas;        // Gas ideal: P = rho*R*T
    specie          specie;
    energy          sensibleInternalEnergy; // shockFluid prefiere energía interna (e)
}

mixture
{
    specie
    {
        molWeight   28.96;  // Peso molecular del aire
    }
    thermodynamics
    {
        Cp          1004.5; // Calor específico a presión constante [J/kgK]
        Hf          0;      // Entalpía de formación (irrelevante aquí)
    }
    transport
    {
        mu          0;      // IMPORTANTE: Viscosidad dinámica CERO
        Pr          0.7;    // Número de Prandtl (para transferencia de calor)
    }
}
